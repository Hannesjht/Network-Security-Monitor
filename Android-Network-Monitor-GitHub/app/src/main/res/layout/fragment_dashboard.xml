<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Security Monitor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#3F51B5"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Monitoring"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Monitoring"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:enabled="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Ready"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/threats_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Threats Detected: 0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/recent_threats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Threats:\nNone"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Traffic:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/traffic_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp"/>

</LinearLayout>