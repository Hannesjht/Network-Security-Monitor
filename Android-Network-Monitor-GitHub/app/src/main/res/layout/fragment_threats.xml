<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Threat Detection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF0000"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/threats_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Threats Detected: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Threats:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/recent_threats_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No threats detected"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:lineSpacingExtra="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nThreat Detection Features:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Real-time malware detection\n• Port scan monitoring\n• Suspicious IP blocking\n• DNS filtering\n• Network anomaly detection"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>