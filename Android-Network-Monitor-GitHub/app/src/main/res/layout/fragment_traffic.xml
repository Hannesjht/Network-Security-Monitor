<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Live Traffic Analysis"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/text_traffic_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoring network traffic..."
                android:textSize="14sp"
                android:textColor="#5D6D7E"
                android:gravity="center"
                android:padding="8dp"
                android:background="#F2F4F4"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_toggle_monitoring"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="â–¶ï¸ Start Monitoring"
                android:backgroundTint="#3498DB"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Packets Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="3dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Packets"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_packet_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_packet_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/sec"
                    android:textSize="12sp"
                    android:textColor="#27AE60"/>
            </LinearLayout>

            <!-- Threats Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="3dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Threats"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_threat_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_threat_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:textSize="12sp"
                    android:textColor="#E74C3C"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Traffic Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traffic Types"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:backgroundTint="#FFFFFF">

            <!-- TCP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TCP"
                    android:textSize="15sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_tcp_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#3498DB"/>
            </LinearLayout>

            <!-- UDP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UDP"
                    android:textSize="15sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_udp_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#9B59B6"/>
            </LinearLayout>

            <!-- ICMP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ICMP"
                    android:textSize="15sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_icmp_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#E67E22"/>
            </LinearLayout>

            <!-- Other -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textSize="15sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/text_other_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#95A5A6"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Recent Activity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/text_recent_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No activity yet. Start monitoring to see live traffic."
                android:textSize="14sp"
                android:textColor="#5D6D7E"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Legend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”µ TCP"
                android:textSize="12sp"
                android:textColor="#5D6D7E"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ£ UDP"
                android:textSize="12sp"
                android:textColor="#5D6D7E"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ  ICMP"
                android:textSize="12sp"
                android:textColor="#5D6D7E"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>